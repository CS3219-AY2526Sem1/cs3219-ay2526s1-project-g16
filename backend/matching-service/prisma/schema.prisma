generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["match"]
}

model MatchTicket {
  id          String      @id @default(cuid())
  userId      String      @unique

  // The user’s concrete identity for this ticket (always single values, lowercase in app code)
  language    String
  difficulty  String
  topic       String

  // Optional preference sets (what the user will accept). Store lowercased values.
  languagePref   String[]
  difficultyPref String[]
  topicPref      String[]

  status      String
  partnerId   String?     // nullable until matched
  roomId      String?     // nullable until matched; NOT unique (two users can share same roomId)
  expiresAt   DateTime
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Helpful indexes for matching & lookups
  @@index([language, difficulty, topic, status, createdAt])
  @@index([status, expiresAt, createdAt])
  @@index([roomId])       // “who’s in this room?”
  @@map("matchticket")
  @@schema("match")
}
