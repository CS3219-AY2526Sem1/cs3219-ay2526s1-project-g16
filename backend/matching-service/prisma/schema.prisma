generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["matchservice"]
}

model MatchTicket {
  id             String   @id @default(cuid())
  userId         String   @unique
  languagePref   String[] @default([])
  difficultyPref String[] @default([])
  topicPref      String[] @default([])
  status         String
  partnerId      String?
  roomId         String?
  expiresAt      DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([status, expiresAt, createdAt])
  @@index([roomId])
  @@map("matchticket")
  @@schema("matchservice")
}

model MatchedUsers {
  id         String   @id @default(cuid())
  userAId    String
  userBId    String
  language   String
  difficulty String
  topic      String
  roomId     String   @unique
  questionId String?
  matchedAt  DateTime @default(now())

  @@map("matchedusers")
  @@schema("matchservice")
}
